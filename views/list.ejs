<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Listagem de consultas</title>
  </head>
  <body>
    <div class="container">
      <%- include('partials/header.ejs')%>
      <h1>Lista de consultas</h1>
      <hr />
      <form action="/search" method="GET">
        <input
          type="search"
          class="form-control mb-3"
          placeholder="Digite o nome ou CPF do paciente"
          name="search"
        />
        <button class="btn btn-success" type="submit">Buscar</button>
      </form>
      <hr />
      <%if(appos.length > 0){%>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nome do paciente</th>
            <th>CPF do paciente</th>
            <th>Data da consulta</th>
            <th>Horário da consulta</th>
            <th>Descrição da consulta</th>
          </tr>
        </thead>
        <tbody>
          <%appos.forEach(appo => {%>
          <tr>
            <td scope="row">
              <a href="/appointment/<%=appo._id%>"><%=appo.name%></a>
            </td>
            <td><%=appo.cpf%></td>
            <td><%=appo.date.toLocaleDateString("pt-br")%></td>
            <td><%=appo.time.toLocaleString("pt-br")%></td>
            <td><%=appo.description%></td>
          </tr>
          <%})%>
        </tbody>
      </table>
      <%} else {%>
      <h1>Nenhuma consulta encontrada</h1>
      <%}%>
    </div>
  </body>
</html>
