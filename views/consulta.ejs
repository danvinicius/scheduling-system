      <div class="card">
        <div class="card-header">
          <h1>Consulta: <%=appo.description%></h1>
        </div>
        <div class="card-body">
          <h3>Paciente: <%=appo.name%></h3>
          <br />
          <h3>CPF: <%=appo.cpf%></h3>
          <br />
          <h3>Data: <%=appo.date.toLocaleDateString("pt-BR")%></h3>
          <br />
          <h3>Hor치rio: <%=appo.time.toLocaleString("pt-BR")%></h3>
          <br />
        </div>

        <div class="card-footer">
          <%if (appo.finished == false){%>
          <form method="POST" action="/appointment/finish">
            <input type="hidden" name="id" value="<%=appo._id%>" />
            <button class="btn btn-danger" type="submit">
              Finalizar consulta
            </button>
          </form>
          <%} else {%>
          <h3>Essa consulta j치 est치 finalizada.</h3>
          <%}%>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>